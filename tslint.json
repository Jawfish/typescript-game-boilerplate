{
  "extends": ["gts/tslint.json", "tslint-consistent-codestyle"],
  "linterOptions": {
    "exclude": ["**/*.json"]
  },
  "rules": {
    "typedef": true,
    "no-bitwise": true,
    "early-exit": true,
    "no-var-keyword": true,
    "unnecessary-else": true,
    "no-collapsible-if": true,
    "no-unnecessary-else": true,
    "only-arrow-functions": true,
    "variable-name": {
      "options": ["ban-keywords", "check-format", "allow-pascal-case"]
    }
  }
}
